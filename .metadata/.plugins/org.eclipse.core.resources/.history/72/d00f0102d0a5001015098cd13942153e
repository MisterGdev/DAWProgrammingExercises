package examenProgramacion;

public class Informatico {
	private Equipo unEquipo;
	
	public Informatico() {
		this.unEquipo = new Equipo();
		unEquipo.getUnMonitor();
		unEquipo.getUnTeclado();
	}
	
	public void cambiarTecladoConCable() {
		Teclado TecladoCable = new Teclado(false);
		unEquipo.setUnTeclado(TecladoCable);
		System.out.println("Has cambiado el teclado por uno con cable."); //Cambiar teclado por uno con cable
	}
	
	public void cambiarTecladoInalambrico() {
		Teclado TecladoInalambrico = new Teclado(true);
		unEquipo.setUnTeclado(TecladoInalambrico);
		System.out.println("Has cambiado el teclado por uno inalambrico."); //Cambiar teclado por uno inalambrico.
	}
	
	public void cambiarMonitorG() {
		Monitor MonitorG = new Monitor(50); //Cambiar a un monitor mas grande.
		unEquipo.setUnMonitor(MonitorG);
		System.out.println("Has cambiado el monitor por uno más grande.");
	}
	
	public void cambiarMonitorP() {
		Monitor MonitorP = new Monitor(50); //Cambiar a un monitor mas pequeño.
		unEquipo.setUnMonitor(MonitorP);
		System.out.println("Has cambiado el monitor por uno más pequenio.");
	}
	
	public void arreglarEquipo() {
		unEquipo.getUnMonitor();
		unMonitor.setEstaEstropeado(false);
		System.out.println("Has arreglado el equipo, ahora el teclado y la pantalla funcionan correctamente.");
	}
}
